#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    // Theme file to use (references theme.ron in config directory)
    theme: "theme",
    
    // Audio visualizer configuration
    cava: (
        input: (
            method: Fifo,
            source: "/tmp/mpd.fifo",    // MPD FIFO output path
        ),
        framerate: 180,                 // Refresh rate for visualization
        autosens: true,                 // Automatic sensitivity adjustment
        smoothing: (
            integral: 70,               // Smoothing intensity (0-100)
            monstercat: true,           // Monstercat-style smoothing algorithm
            gravity: 100,               // Bar fall speed
        ),
    ),
    
    // Tab definitions for different views
    tabs: [
        (
            name: "Queue",
            // Split layout: Queue on left, Album Art + Cava on right
            pane: Split(
                direction: Horizontal,
                panes: [
                    (size: "60%", pane: Pane(Queue), borders: "ALL"),
                    (
                        size: "40%",
                        pane: Split(
                            direction: Vertical,
                            panes: [
                                (size: "60%", pane: Pane(AlbumArt), borders: "ALL"),
                                (size: "40%", pane: Pane(Cava), borders: "ALL"),
                            ],
                        ),
                    ),
                ],
            ),
        ),
        (
            name: "Directories",
            pane: Pane(Directories),    // Browse by file system structure
        ),
        (
            name: "Artists",
            pane: Pane(Artists),        // Browse by artist
        ),
        (
            name: "Album Artists",
            pane: Pane(AlbumArtists),   // Browse by album artist tag
        ),
        (
            name: "Albums",
            pane: Pane(Albums),         // Browse by album
        ),
        (
            name: "Playlists",
            pane: Pane(Playlists),      // Browse saved playlists
        ),
        (
            name: "Search",
            pane: Pane(Search),         // Search interface
        ),
    ],
)